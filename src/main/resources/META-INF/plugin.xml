<idea-plugin>
    <name>AutoCp</name>
    <vendor email="jpushpavel@gmail.com">Pushpavel Janakiraman</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <resource-bundle>messages.autocp</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="config.AutoCpConfigType"/>
        <runConfigurationProducer implementation="config.AutoCpConfigProducer"/>
        <notificationGroup id="autocp-notifications-group" key="notificationGroup" displayType="BALLOON"/>

        <!--    Settings   -->
        <applicationConfigurable instance="settings.generalSettings.AutoCpGeneralSettingsConfigurable"
                                 id="tools.autocp"
                                 groupId="tools"
                                 displayName="AutoCp"/>

        <applicationConfigurable instance="settings.langSettings.AutoCpLangSettingsConfigurable"
                                 id="tools.autocp.languages"
                                 parentId="tools.autocp"
                                 displayName="Languages"/>


        <toolWindow factoryClass="tool.ToolFactory" id="AutoCp" icon="Icons.LogoIcon" anchor="right"/>
        <fileTemplateGroup implementation="lang.FileTemplates"/>
        <fileDocumentManagerListener implementation="database.AutoCpStorageSaver"/>
    </extensions>

    <actions>
        <action id="dev.pushpavel.autoCP.gather.GatherProblemsAction"
                class="gather.GatherProblemsAction"
                text="Gather Problems"
                description="Gathers problems parsed by competitive companion browser extension">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
