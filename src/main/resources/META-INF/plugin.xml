<idea-plugin>
    <id>com.github.pushpavel.autocp</id>
    <name>AutoCP</name>
    <vendor>pushpavel</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="plugin.config.AutoCpConfigType"/>
        <runConfigurationProducer implementation="plugin.config.AutoCpConfigProducer"/>
        <fileEditorProvider implementation="files.editor.ProblemSpecFileEditorProvider"/>
        <notificationGroup id="AutoCp Notification Group" displayType="BALLOON"/>
        <applicationConfigurable instance="plugin.settings.SettingsConfigurable"
                                 id="plugin.settings.SettingsConfigurable"
                                 displayName="AutoCp"/>
        <toolWindow factoryClass="tool.ToolFactory" id="AutoCp" icon="AllIcons.General.Modified"/>
    </extensions>
    <actions>
        <action id="dev.pushpavel.autoCP.plugin.actions.GatherProblemsAction"
                class="plugin.actions.GatherProblemsAction"
                text="Gather Problems"
                description="Gathers problems parsed by competitive companion browser extension"/>
    </actions>
</idea-plugin>
