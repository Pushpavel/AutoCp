

CREATE TABLE ProblemState (
    selectedIndex INTEGER NOT NULL DEFAULT -1,
    problemName TEXT NOT NULL,
    problemGroup TEXT NOT NULL,
    FOREIGN KEY(problemName,problemGroup) REFERENCES ProblemInfo(name,problemGroup),
    PRIMARY KEY(problemName,problemGroup)
);

insertProblemState:
    INSERT INTO ProblemState
    VALUES ?;

getProblemState:
    SELECT * FROM ProblemState
    WHERE problemName = ? AND problemGroup = ?;

updateProblemState:
    REPLACE INTO ProblemState
    VALUES ?;